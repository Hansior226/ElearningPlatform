@model CourseManagement.Models.Grade
<!DOCTYPE html>
<html>
<head>
    <title>Create Grade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Create Grade</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                @Html.LabelFor(model => model.StudentId, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.GradeValue, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.GradeValue, new { @class = "form-control", type = "number", step = "0.1" })
                @Html.ValidationMessageFor(model => model.GradeValue, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.Comment, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index", new { courseId = ViewBag.CourseId })" class="btn btn-secondary">Back</a>
        }
    </div>
</body>
</html>