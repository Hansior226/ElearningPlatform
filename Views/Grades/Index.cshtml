@model IEnumerable<CourseManagement.Models.Grade>
<!DOCTYPE html>
<html>
<head>
    <title>Grades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Grades</h2>
        <p><a href="@Url.Action("Create", new { courseId = ViewBag.CourseId })" class="btn btn-primary">Create New</a></p>
        <table class="table">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Grade</th>
                    <th>Comment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.GradeValue</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href="@Url.Action("Edit", new { courseId = ViewBag.CourseId, studentId = item.StudentId })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", new { courseId = ViewBag.CourseId, studentId = item.StudentId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary">Back to Courses</a>
    </div>
</body>
</html>