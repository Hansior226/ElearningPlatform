@model CourseManagement.Models.Lesson
<!DOCTYPE html>
<html>
<head>
    <title>Delete Lesson</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Delete Lesson</h2>
        <h4>Are you sure you want to delete this?</h4>
        <div>
            <strong>Title:</strong> @Model.Title<br />
            <strong>Duration:</strong> @Model.Duration min
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger mt-3">Delete</button>
            <a href="@Url.Action("Index", new { courseId = ViewBag.CourseId })" class="btn btn-secondary mt-3">Back</a>
        }
    </div>
</body>
</html>