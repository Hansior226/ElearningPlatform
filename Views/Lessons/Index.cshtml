@model IEnumerable<CourseManagement.Models.Lesson>
<!DOCTYPE html>
<html>
<head>
    <title>Lessons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2>Lessons</h2>
        <p><a href="@Url.Action("Create", new { courseId = ViewBag.CourseId })" class="btn btn-primary">Create New</a></p>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Duration (min)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Duration</td>
                        <td>
                            <a href="@Url.Action("Edit", new { courseId = ViewBag.CourseId, lessonId = item.LessonId })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", new { courseId = ViewBag.CourseId, lessonId = item.LessonId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary">Back to Courses</a>
    </div>
</body>
</html>